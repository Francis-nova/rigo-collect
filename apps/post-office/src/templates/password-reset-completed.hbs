  <tr>
    <td style="padding:32px;">
      <p style="font-size:16px;margin:0 0 16px 0;color:#1e1e1e;">Hi {{#if firstName}}{{firstName}}{{else}}there{{/if}},</p>
      <p style="font-size:14px;margin:0 0 16px 0;color:#333333;">Your password has been reset successfully on {{formattedChangedAt}}.</p>
      <p style="font-size:13px;margin:0;color:#555555;">If you did not authorize this action, please secure your account immediately.</p>
    </td>
  </tr>
</table>
{{> footer year=year }}
